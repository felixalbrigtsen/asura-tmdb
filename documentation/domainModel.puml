@startuml Tournament System
title Tournament System - Group 1 

class Match {
    *match_id: Integer
    Tournament
    Teams
    Scores
    Winner
}
class Team {
    *team_id
    Name
    Tournaments
    Players
    Matches
}
class Player {
    *player_id
    Name
}

class Tournament {
    *tournament_id
    Name
    
    Banner Image
    Start-date
    End-date
    Teams
}


Team "2..*" -> "1..*" Tournament : "Plays in"
Tournament "1" --> "*" Match : contains
Player "1..*" --> "1..1" Team : "Belongs to"
Team "2..2" --> "1..*" Match : "Competes in"


@enduml